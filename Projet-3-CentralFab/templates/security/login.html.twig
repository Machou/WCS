{% extends 'base.html.twig' %}

{% block title %}Connexion{{parent()}}{% endblock %}

{% block body %}
    <div class="account-container">
        <div class="account-block-back">
            <div>
                <span>&#60;</span>
            </div>
            <div>
                <a href="{{ path('home') }}">Retour</a>
            </div>
        </div>
        <div class="account-block-title">
            <div>Connexion</div>
        </div>
        <div class="account-block-buttons">
            <form method="post" action="">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        Vous êtes connecté en tant que {{ app.user.username }}
                    </div>
                {% endif %}

                {# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> #}
                {# <label for="inputEmail">Email</label> #}
                <div class="block-button input">
                    <div>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus placeholder="Email">
                    {# <label for="inputPassword">Mot de passe</label> #}
                    </div>
                </div>
                <div class="block-button input">
                    <div>
                        <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="Mot de passe">
                    </div>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                {% if app.user %}
                    <div class="account-block-login">
                        <div class="login-btn">
                            {# <a href="{{ path('app_logout') }}"> #}
                            <a href="{{ path('app_logout') }}">Déconnexion
                                {# <button class="btn btn-lg btn-primary" type="submit">
                                    Déconnexion
                                </button> #}
                            </a>
                        </div>
                    </div>
                {% else %}
                    <div class="account-block-login">
                        <div class="login-btn">
                            <button class="btn btn-lg btn-primary" type="submit">
                                Se connecter
                            </button>
                        </div>
                    </div>
                {% endif %}

            </form>
        </div>
        <div class="block-legals">
            <div>
                <a href="{{ path('legals')}}">Mentions légales</a>
            </div>
    </div>
    </div>
{% endblock %}
