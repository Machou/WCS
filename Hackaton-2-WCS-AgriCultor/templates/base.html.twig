<!DOCTYPE html>
<html lang="fr" dir="ltr">
<head>
    <meta charset="UTF-8">
    <link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="build/normalize.css">
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>

{% block body %}{% endblock %}
<a class="profil_container">
{% if app.user %}
        <a href="{{ path('profile') }}">Mon profil</a>    
    {% else %}
        <a href="{{ path('home') }}">Acceuil</a>
{% endif %}
</a>


{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
