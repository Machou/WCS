{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>S'enregistrer</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'fooz'}}) }}

        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword.first) }}
        {{ form_row(registrationForm.plainPassword.second) }}

        <button type="submit" class="btn btn-success mt-3">Créer un compte</button>
    {{ form_end(registrationForm) }}

    <p class="mt-3">Déjà inscrit ? <a href="{{ path('app_login') }}">Connectez-vous !</a></p>
{% endblock %}