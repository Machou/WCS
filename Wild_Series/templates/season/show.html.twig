{% extends 'base.html.twig' %}

{% block title %}Les Saisons{% endblock %}

{% block body %}
    <h1>Les Saisons</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Année</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('season_index') }}" class="btn btn-info mt-3 text-white">Retourner à la liste des Saisons</a>

        {% if is_granted('ROLE_ADMIN') %}<a href="{{ path('season_edit', {id: season.id}) }}" class="btn btn-success mt-3">Modifier</a>{% endif %}

        {% if is_granted('ROLE_ADMIN') %}<p class="mt-3">{{ include('season/_delete_form.html.twig') }}</p>{% endif %}
    </div>
{% endblock %}