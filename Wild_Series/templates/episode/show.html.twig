{% extends 'base.html.twig' %}

{% block title %}Liste des Épisodes{% endblock %}

{% block body %}
    <h1>Épisode</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }} {{ episode.season.program.title }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mt-3">
        <a href="{{ path('episode_index') }}" class="btn btn-info text-white">Retourner à la liste des Épisodes</a>

        {% if is_granted('ROLE_ADMIN') %}<a href="{{ path('episode_edit', {slug: episode.slug}) }}" class="btn btn-success">Modifier l'Épisode</a>{% endif %}

        {% if is_granted('ROLE_ADMIN') %}<p class="mt-3">{{ include('episode/_delete_form.html.twig') }}</p>{% endif %}
    </div>
{% endblock %}