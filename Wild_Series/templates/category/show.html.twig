{% extends 'base.html.twig' %}

{% block title %}Catégorie {{ category.name }}{% endblock %}

{% block body %}
        <h1>Toutes les Séries de la Catégorie {{ category.name }}</h1>

        {% for program in programs %}
                <h3>{{ program.id }} / <a href="{{ path("program_show", {slug: program.slug}) }}">{{ program.title }}</a></h3>
                <p>{{ program.summary }}</p>
                <p>Catégorie : {{ program.category.name }}</p>
        {% else %}
                Aucune série trouvée.
        {% endfor %}

        {% if is_granted('ROLE_ADMIN') %}<p class="mt-3"><a href="{{ path('program_new')}}" class="btn btn-success">Ajouter une nouvelle Série</a></p>{% endif %}
{% endblock %}